{
  "name": "blinkt-zero-middleware",
  "version": "0.0.1",
  "description": "",
  "author": "Engawa <infos@engawa.de>",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r ts-node/register/transpile-only -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "7.4.4",
    "@nestjs/core": "7.4.4",
    "@nestjs/graphql": "7.7.0",
    "@nestjs/platform-fastify": "7.4.4",
    "@nestjs/swagger": "4.6.1",
    "apollo-server-fastify": "2.18.2",
    "class-validator": "0.12.2",
    "fastify-swagger": "3.4.0",
    "graphql": "15.3.0",
    "graphql-tools": "5.0.0",
    "helmet": "4.1.1",
    "nocache": "2.1.0",
    "onoff": "6.0.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.3",
    "tinycolor2": "1.4.2"
  },
  "devDependencies": {
    "@nestjs/testing": "7.4.4",
    "@types/helmet": "0.0.48",
    "@types/jest": "26.0.14",
    "@types/node": "12.12.67",
    "@types/supertest": "2.0.10",
    "@types/tinycolor2": "1.4.2",
    "jest": "26.6.3",
    "nodemon": "2.0.6",
    "prettier": "2.1.2",
    "supertest": "5.0.0",
    "ts-jest": "26.4.1",
    "ts-node": "9.0.0",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.1.3",
    "typescript": "4.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
